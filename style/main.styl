/*------------------------------------* 
   $MAIN 
*------------------------------------*/

if $global-border-box
  *, *:before, *:after
    vendor('box-sizing', border-box)

::selection
  background-color $base-color
  color #fff
  
::-moz-selection
  background-color $base-color
  color #fff

body
  background-color #fff
  font-size $base-font-size
  line-height $base-line-height 
  font-family $base-font-family
  font-weight 400
  padding 0
  margin 0
  color $base-color

a
  color $link-color
  text-decoration none

  &:hover
    color $brand-color

/** 
 * Main 
 */
.site
  position relative
  clearfix()

.page
  width 900px
  margin 40px auto
  clearfix()

/** 
 * Top banner 
 */
.top-banner
  background-color $brand-color
  padding 1em

  @media print
    display none
    visibility hidden

.logo
  display block
  text-indent -9999px
  background transparent url('images/logo.svg') top left no-repeat
  -webkit-background-size 100%
  background-size 100%
  width 200px
  height 37px

.view-source
  vendor('transition', color .2s ease)
  &:hover
    color #fff

/** 
 * Print mode 
 */
.print-mode
  @media print
    display none
    visibility hidden

.print-mode__container
  text-align center
  padding 25px 0 0 0

.toggle-print{
  display: inline-block;
  border: 2px solid #ddd;
  border-radius: 50px;
  padding: 2px;
  height: 22px;
  width: 38px;
  position: relative;
  z-index: 1;
  cursor pointer

  &:after{
    content: 'Toggle Print Mode';
    position: absolute;
    display: block;
    top: 0;
    left: 100%;
    width: 130px;
    color: #aaa;
    font-size: 12px;
    line-height: 18px;
    cursor pointer
  }
}

.toggle-print__checkbox{
  z-index: -1;
  position: absolute;
  display: none;
}

.toggle-print__btn{
  background-color: #aaa;
  display: block;
  height: 14px;
  width: 14px;
  border-radius: 50px;
  position: absolute;
  top: 2px;
  left: 2px;
  vendor('transition', all .2s ease);
  cursor pointer
}

.toggle-print__checkbox:checked ~.toggle-print__btn{
  left: 18px;
  background-color: $add-color;
}

/** 
 * Estimate Header 
 */
.logo-input
  display none

.company-logo
  padding 0
  margin 0
  position relative
  display inline-block
  cursor pointer

  &:before, &:after
    vendor('transition', opacity .2s ease-out)

  &:before
    content ''
    display block
    position absolute
    top -10px
    left -10px
    right -10px
    bottom -4px
    border 2px dashed #aaa
    border-radius 5px
    z-index -1
    opacity 0

  &:after
    content 'Change logo'
    display block
    position absolute
    padding 0 10px
    top -18px
    left 5px
    font-weight bold
    background-color #fff
    font-size 12px
    color $brand-color
    opacity 0

  &:hover
    &:before, &:after
      opacity 1

  img
    max-width 100%
    height auto
    cursor pointer

.page-title
  font-weight 600
  font-size 1.5em
  letter-spacing 0px
  text-align right
  letter-spacing 2px
  text-transform uppercase

  input
    text-align right
    text-transform uppercase

/** 
 * Estimate info 
 */
.company-info, .costumer-info
  p
    margin 0
    padding 0
    font-size 1.1em


/** 
 * Sections 
 */
.estimate-section
  position relative

  &:before
    content ''
    display block
    background $base-color url('images/move.svg') center center no-repeat
    width 36px
    height 36px
    position absolute
    top 41px
    left -36px
    vendor('border-radius', 50% 0 0 50%)
    vendor('background-size', 50%)
    vendor('transition', opacity .2s ease)
    cursor move
    opacity 0

  &:hover
    &:before
      opacity 1

.ui-state-highlight
  height 300px
  width 100%
  margin-bottom 2em
  background-color #f0f0f0
  border 1px solid #ddd

.section-title
  margin 0
  margin-bottom 5px

.section-thead
  font-weight 700
  color $brand-color
  font-weight 16px

.item-title
  margin 0
  font-size 1.1em
  font-weight 600

  input
    width 100%

.item-description
  margin 0
  font-size 14px
  line-height 1.4
  color #777

  textarea
    resize none
    line-height 1.4 !important
    width 100%
